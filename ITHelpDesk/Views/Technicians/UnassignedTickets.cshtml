@model IEnumerable<Ticket>

@{
    ViewData["Title"] = "Unassigned Tickets";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<h2>Unassigned Tickets</h2>
<div class="btn-group mb-3" role="group">
    <a asp-action="UnassignedTickets" class="btn @(currentAction == "UnassignedTickets" ? "btn-warning" : "btn-outline-warning")">Unassigned</a>
    <a asp-action="MyTickets" class="btn @(currentAction == "MyTickets" ? "btn-primary" : "btn-outline-primary")">Assigned</a>
    <a asp-action="ClosedTickets" class="btn @(currentAction == "ClosedTickets" ? "btn-success" : "btn-outline-success")">Closed</a>
    
   
</div>

@if (!Model.Any())
{
    <p>No unassigned tickets found for your category group.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>TicketNumber</th>
                <th>Requester</th>
                <th>Email</th>
                <th>Department</th>
                <th>Subcategory</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Port</th>
                <th>Description</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr>
                    <td>@ticket.TicketNumber</td>
                    <td>@ticket.RequesterName</td>
                    <td>@ticket.Email</td>
                    <td>@ticket.Department?.DepartmentName</td>
                    <td>@ticket.Subcategory?.SubcategoryName</td>
                    <td>@ticket.Priority?.PriorityName</td>
                    <td>@ticket.Status?.StatusName</td>
                    <td>@ticket.Port?.PortName</td>
                    <td>@ticket.Description</td>
                    <td>@ticket.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <form asp-action="AssignToMe" asp-controller="Technicians" method="post">
                            <input type="hidden" name="id" value="@ticket.Id" />
                            <button type="submit" class="btn btn-sm btn-success">Assign to Me</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

