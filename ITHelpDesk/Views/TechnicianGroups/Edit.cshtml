@model ITHelpDesk.Models.TechnicianGroup

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit";
}

<h1>Edit Technician Group</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="GroupName" class="control-label"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Select Technicians</label>
                <select asp-for="SelectedTechnicianIds" asp-items="ViewBag.TechnicianList" class="form-control" multiple>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
