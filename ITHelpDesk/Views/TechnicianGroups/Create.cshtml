@model ITHelpDesk.Models.TechnicianGroup

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create";
}

<h1>Create Technician Group</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="GroupName" class="control-label"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SeniorTechnicianId" class="control-label">Senior Technician</label>
                <select asp-for="SeniorTechnicianId" class="form-control"
                        asp-items="ViewBag.SeniorTechnicianId">
                    <option value="">-- Select Senior Technician --</option>
                </select>
                <span asp-validation-for="SeniorTechnicianId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
