@model ITHelpDesk.Models.TechnicianGroup

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<h1>Delete Technician Group</h1>
<hr />

<h4>Are you sure you want to delete this group?</h4>
<div>
    <strong>Group Name:</strong> @Model.GroupName
</div>

<h5>Assigned Technicians:</h5>
@if (Model.Technicians != null && Model.Technicians.Any())
{
    <ul>
        @foreach (var tech in Model.Technicians)
        {
            <li>@tech.FullName</li>
        }
    </ul>
}
else
{
    <p><em>No technicians assigned.</em></p>
}

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Cancel</a>
</form>
