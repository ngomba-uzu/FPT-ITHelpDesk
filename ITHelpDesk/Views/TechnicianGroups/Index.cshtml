@model IEnumerable<ITHelpDesk.Models.TechnicianGroup>

@{
    ViewData["Title"] = "Technician Groups";
    Layout = "_Layout";
}

<h1>Technician Groups</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Group</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Group Name</th>
            <th>Technicians</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.GroupName</td>
                <td>
                    @if (group.Technicians != null && group.Technicians.Any())
                    {
                        <ul>
                            @foreach (var tech in group.Technicians)
                            {
                                <li>@tech.FullName</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <em>No technicians</em>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@group.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@group.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@group.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

