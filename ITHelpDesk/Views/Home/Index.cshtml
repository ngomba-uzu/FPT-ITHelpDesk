                        borderWidth: 0
                    }]
                },
                options: {
                    plugins: { legend: { display: false } },
                    cutout: '70%'
                }
            });
        }

        // Port Activity Chart (Main Overview)
        const portActivityCtx = document.getElementById('portActivityChart')?.getContext('2d');
        if (portActivityCtx) {
            new Chart(portActivityCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Unassigned', 'Pending', 'Closed', 'Escalated'],
                    datasets: [{
                        data: [
    @ViewBag.PortStats?.Opened ?? 0,
    @ViewBag.PortStats?.Pending ?? 0,
    @ViewBag.PortStats?.Closed ?? 0,
    @ViewBag.PortStats?.Escalated ?? 0
                        ],
                        backgroundColor: ['#36b9cc', '#f6c23e', '#1cc88a', '#e74a3b'],
                        borderWidth: 0
                    }]
                },
                options: {
                    plugins: { legend: { display: false } },
                    cutout: '70%'
                }
            });
        }

        // Search functionality for ports table
        const portSearchInput = document.getElementById('portSearch');
        if (portSearchInput) {
            portSearchInput.addEventListener('input', function () {
                const searchValue = this.value.toLowerCase();
                const rows = document.querySelectorAll('#portsTable tbody tr');

                rows.forEach(row => {
                    const portName = row.cells[0].textContent.toLowerCase();
                    row.style.display = portName.includes(searchValue) ? '' : 'none';
                });
            });
        }

        // Search functionality for technicians table
        const techSearchInput = document.getElementById('techSearch');
        if (techSearchInput) {
            techSearchInput.addEventListener('input', function () {
                const searchValue = this.value.toLowerCase();
                const rows = document.querySelectorAll('#techTable tbody tr');

                rows.forEach(row => {
                    const techName = row.cells[0].textContent.toLowerCase();
                    row.style.display = techName.includes(searchValue) ? '' : 'none';
                });
            });
        }

        // Initialize tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Filter subcategories by selected category
        const categoryFilter = document.getElementById('categoryFilter');
        if (categoryFilter) {
            categoryFilter.addEventListener('change', function () {
                const selectedCategoryId = this.value;
                const allItems = document.querySelectorAll('#subcategoryList .list-group-item');

                allItems.forEach(item => {
                    const itemCategoryId = item.getAttribute('data-category-id');
                    if (selectedCategoryId === 'all' || itemCategoryId === selectedCategoryId) {
                        item.style.display = 'flex'; // show
                    } else {
                        item.style.display = 'none'; // hide
                    }
                });
            });
        }
    });
</script>



@functions {
    public string GetInitials(string fullName)
    {
        if (string.IsNullOrWhiteSpace(fullName))
            return "??";

        var names = fullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (names.Length >= 2)
            return $"{names[0][0]}{names[1][0]}".ToUpper();

        return fullName.Length >= 2
            ? fullName.Substring(0, 2).ToUpper()
            : fullName.ToUpper();
    }
}