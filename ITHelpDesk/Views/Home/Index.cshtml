    const technicianAssignmentsCtx = document.getElementById('assignmentsChart')?.getContext('2d');
    if (technicianAssignmentsCtx) {
        new Chart(technicianAssignmentsCtx, {
            type: 'doughnut',
            data: {
                labels: ['Unassigned', 'Pending', 'Closed', 'Escalated'],
                datasets: [{
                    data: [
    @ViewBag.TechnicianStats?.Opened ?? 0,
    @ViewBag.TechnicianStats?.Pending ?? 0,
    @ViewBag.TechnicianStats?.Closed ?? 0,
    @ViewBag.TechnicianStats?.Escalated ?? 0
                    ],
                    backgroundColor: ['#4e73df', '#f6c23e', '#1cc88a', '#e74a3b'],
                    borderWidth: 0
                }]
            },
            options: {
                plugins: { legend: { display: false } },
                cutout: '70%'
            }
        });
    }

    // Port Activity Chart (Main Overview)
    const portActivityCtx = document.getElementById('portActivityChart')?.getContext('2d');
    if (portActivityCtx) {
        new Chart(portActivityCtx, {
            type: 'doughnut',
            data: {
                labels: ['Unassigned', 'Pending', 'Closed', 'Escalated'],
                datasets: [{
                    data: [
    @ViewBag.PortStats?.Opened ?? 0,
    @ViewBag.PortStats?.Pending ?? 0,
    @ViewBag.PortStats?.Closed ?? 0,
    @ViewBag.PortStats?.Escalated ?? 0
                    ],
                    backgroundColor: ['#36b9cc', '#f6c23e', '#1cc88a', '#e74a3b'],
                    borderWidth: 0
                }]
            },
            options: {
                plugins: { legend: { display: false } },
                cutout: '70%'
            }
        });
    }
</script>



 @functions {
        string GetInitials(string fullName)
        {
            if (string.IsNullOrEmpty(fullName)) return "";
            var names = fullName.Split(' ');
            return names.Length switch
            {
                0 => "",
                1 => names[0][0].ToString(),
                _ => $"{names[0][0]}{names[^1][0]}"
            };
        }
    }
