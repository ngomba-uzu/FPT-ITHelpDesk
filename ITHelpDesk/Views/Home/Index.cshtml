@{
    Layout = "_Layout";
    ViewData["Title"] = "Dashboard";
    string role = ViewBag.Role as string;
}

<div class="container mt-5">
    @if (role == "User")
    {
        <!-- Summary Cards -->
        <div class="row g-3 mb-4">
            <!-- Total Tickets -->
            <div class="col-md-4">
                <div class="card border-start border-primary border-4 shadow-sm h-100">
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <div class="text-center w-100">
                            <h6 class="text-muted mb-1">Total Tickets</h6>
                            <h3 class="fw-bold mb-0">@ViewBag.TotalTickets</h3>
                        </div>
                        <div class="icon-bg bg-primary bg-opacity-10 ms-3">
                            <i class="fas fa-ticket-alt text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pending Tickets -->
            <div class="col-md-4">
                <div class="card border-start border-warning border-4 shadow-sm h-100">
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <div class="text-center w-100">
                            <h6 class="text-muted mb-1">Pending Tickets</h6>
                            <h3 class="fw-bold mb-0">@ViewBag.PendingTickets</h3>
                        </div>
                        <div class="icon-bg bg-warning bg-opacity-10 ms-3">
                            <i class="fas fa-clock text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Closed Tickets -->
            <div class="col-md-4">
                <div class="card border-start border-success border-4 shadow-sm h-100">
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <div class="text-center w-100">
                            <h6 class="text-muted mb-1">Closed Tickets</h6>
                            <h3 class="fw-bold mb-0">@ViewBag.ReceivedTickets</h3>
                        </div>
                        <div class="icon-bg bg-success bg-opacity-10 ms-3">
                            <i class="fas fa-check-circle text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- End of row -->
        <!-- Recent Tickets Table -->
        <div class="card shadow-sm">
            <div class="card-header bg-white border-bottom-0 pb-0">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">Recent Tickets</h5>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr class="table-light">
                                <th>Ticket #</th>
                                <th>Requester</th>
                                <th>Category</th>
                                <th>Priority</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in ViewBag.RecentTickets)
                            {
                                <tr>
                                    <td class="fw-bold">@ticket.TicketNumber</td>
                                    <td>@ticket.RequesterName</td>
                                    <td>
                                        <span class="d-block">@ticket.Category?.CategoryName</span>
                                        <small class="text-muted">@ticket.Subcategory?.SubcategoryName</small>
                                    </td>
                                    <td>
                                        @{
                                            var priorityClass = "";
                                            switch (ticket.Priority?.PriorityName?.ToLower())
                                            {
                                                case "high":
                                                    priorityClass = "text-danger";
                                                    break;
                                                case "medium":
                                                    priorityClass = "text-warning";
                                                    break;
                                                case "low":
                                                    priorityClass = "text-success";
                                                    break;
                                                default:
                                                    priorityClass = "text-info";
                                                    break;
                                            }
                                        }
                                        <span class="@priorityClass">
                                            <i class="fas fa-circle me-1" style="font-size:8px"></i>
                                            @ticket.Priority?.PriorityName
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark">
                                            <i class="fas fa-circle text-warning me-1" style="font-size:8px"></i>
                                            Pending
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (role == "Technician")
    {
        <!-- Summary Cards -->
        <div class="row g-3 mb-4">
            <!-- Technician Activities Card -->
            <div class="col-lg-6">
                <div class="card shadow-sm h-100 border-0">
                    <div class="card-header bg-primary bg-gradient text-white">
                        <h5 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>Your Ticket Assignments</h5>
                    </div>
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-7">
                                <div class="row g-3 text-center">
                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block">UNASSIGNED</small>
                                            <h3 class="fw-bold text-primary mb-0">@ViewBag.TechnicianStats?.Opened</h3>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block">PENDING</small>
                                            <h3 class="fw-bold text-warning mb-0">@ViewBag.TechnicianStats?.Pending</h3>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block">CLOSED</small>
                                            <h3 class="fw-bold text-success mb-0">@ViewBag.TechnicianStats?.Closed</h3>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block">ESCALATED</small>
                                            <h3 class="fw-bold text-danger mb-0">@ViewBag.TechnicianStats?.Escalated</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <canvas id="assignmentsChart" class="mt-3 mt-md-0"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <a href="@Url.Action("MyTickets", "Technicians")" class="btn btn-outline-primary w-100">
                            <i class="fas fa-ticket-alt me-2"></i>Manage Tickets
                        </a>
                    </div>
                </div>
            </div>

            <!-- Port Activity Card -->
            <div class="col-lg-6">
                <div class="card shadow-sm h-100 border-0">
                    <div class="card-header bg-info bg-gradient text-white">
                        <h5 class="mb-0"><i class="fas fa-anchor me-2"></i>@ViewBag.PortStats?.PortName Activity</h5>
                    </div>
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-7">
                                <div class="row g-3 text-center">
                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block">UNASSIGNED</small>
                                            <h3 class="fw-bold text-primary mb-0">@ViewBag.PortStats?.Opened</h3>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block">PENDING</small>
                                            <h3 class="fw-bold text-warning mb-0">@ViewBag.PortStats?.Pending</h3>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block">CLOSED</small>
                                            <h3 class="fw-bold text-success mb-0">@ViewBag.PortStats?.Closed</h3>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block">ESCALATED</small>
                                            <h3 class="fw-bold text-danger mb-0">@ViewBag.PortStats?.Escalated</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <canvas id="portActivityChart" class="mt-3 mt-md-0"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <a href="@Url.Action("PortTickets", "Tickets")" class="btn btn-outline-info w-100">
                            <i class="fas fa-ship me-2"></i>View Port Tickets
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tickets Table -->
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom-0">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                    <h5 class="mb-3 mb-md-0"><i class="fas fa-tasks me-2"></i>Assigned Tickets</h5>
                    <div class="col-md-5">
                        <form method="get" class="input-group shadow-sm">
                            <input type="text" class="form-control border-end-0"
                            name="search" placeholder="Search tickets..."
                            value="@Context.Request.Query["search"]">
                            <button class="btn btn-outline-secondary border-start-0" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Ticket #</th>
                                <th>Requester</th>
                                <th>Site</th>
                                <th>Category</th>
                                <th>Priority</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in ViewBag.TechnicianTickets)
                            {
                                <tr>
                                    <td class="fw-bold">@ticket.TicketNumber</td>
                                    <td>@ticket.RequesterName</td>
                                    <td>@ticket.Port?.PortName</td>
                                    <td>
                                        <div>@ticket.Category</div>
                                        <small class="text-muted">@ticket.Subcategory</small>
                                    </td>
                                    <td>
                                        @{
                                            var priorityClass = "";
                                            switch (ticket.Priority?.ToLower())
                                            {
                                                case "high":
                                                    priorityClass = "bg-danger bg-opacity-10 text-danger";
                                                    break;
                                                case "medium":
                                                    priorityClass = "bg-warning bg-opacity-10 text-warning";
                                                    break;
                                                case "low":
                                                    priorityClass = "bg-success bg-opacity-10 text-success";
                                                    break;
                                                default:
                                                    priorityClass = "bg-info bg-opacity-10 text-info";
                                                    break;
                                            }
                                        }
                                        <span class="badge @priorityClass">@ticket.Priority</span>
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = "";
                                            switch (ticket.Status?.ToLower())
                                            {
                                                case "open":
                                                    statusClass = "bg-primary bg-opacity-10 text-primary";
                                                    break;
                                                case "pending":
                                                    statusClass = "bg-warning bg-opacity-10 text-warning";
                                                    break;
                                                case "closed":
                                                    statusClass = "bg-success bg-opacity-10 text-success";
                                                    break;
                                                case "assigned":
                                                    statusClass = "bg-info bg-opacity-10 text-info";
                                                    break;
                                                default:
                                                    statusClass = "bg-secondary bg-opacity-10 text-secondary";
                                                    break;
                                            }
                                        }
                                        <span class="badge @statusClass">@ticket.Status</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    }
    else if (role == "Management")
    {
        <div class="container-fluid px-4">
            <!-- Key Metrics -->
            <div class="row g-4 mb-4">
                <div class="col-xxl-3 col-md-6">
                    <div class="card shadow-sm h-100 border-start border-primary border-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">Active Ports</h6>
                                    <h2 class="mb-0">@ViewBag.ManagementStats?.ActivePorts</h2>
                                </div>
                                <div class="icon-bg bg-primary bg-opacity-10">
                                    <i class="fas fa-anchor text-primary fs-4"></i>
                                </div>
                            </div>
                            <small class="text-muted">Out of @ViewBag.ManagementStats?.TotalPorts total ports</small>
                        </div>
                    </div>
                </div>

                <div class="col-xxl-3 col-md-6">
                    <div class="card shadow-sm h-100 border-start border-success border-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">Resolved Today</h6>
                                    <h2 class="mb-0">@ViewBag.ManagementStats?.ResolvedToday</h2>
                                </div>
                                <div class="icon-bg bg-success bg-opacity-10">
                                    <i class="fas fa-check-circle text-success fs-4"></i>
                                </div>
                            </div>
                            <small class="text-muted">@ViewBag.ManagementStats?.ActiveTickets active tickets</small>
                        </div>
                    </div>
                </div>

                <div class="col-xxl-3 col-md-6">
                    <div class="card shadow-sm h-100 border-start border-danger border-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">Escalations</h6>
                                    <h2 class="mb-0">
                                        @(ViewBag.ManagementStats?.EscalatedTickets > 0 ? ViewBag.ManagementStats.EscalatedTickets : 0)
                                    </h2>
                                </div>
                                <div class="icon-bg bg-danger bg-opacity-10">
                                    <i class="fas fa-exclamation-triangle text-danger fs-4"></i>
                                </div>
                            </div>
                            <div class="mt-2">
                                @if (ViewBag.ManagementStats?.HighPriorityEscalations > 0)
                                {
                                    <div class="text-danger small">
                                        <i class="fas fa-circle-exclamation me-1"></i>
                                        @ViewBag.ManagementStats.HighPriorityEscalations critical
                                    </div>
                                }
                                @if (ViewBag.ManagementStats?.UnattendedHighPriority > 0)
                                {
                                    <div class="text-warning small mt-2">
                                        <i class="fas fa-clock me-1"></i>
                                        @ViewBag.ManagementStats.UnattendedHighPriority unattended
                                    </div>
                                }
                                @if (ViewBag.ManagementStats?.HighPriorityEscalations == 0 && ViewBag.ManagementStats?.UnattendedHighPriority == 0)
                                {
                                    <div class="text-muted small">
                                        No active critical issues
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xxl-3 col-md-6">
                    <div class="card shadow-sm h-100 border-start border-info border-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">Tech Utilization</h6>
                                    <h2 class="mb-0">@ViewBag.ManagementStats?.ActiveTechnicians</h2>
                                </div>
                                <div class="icon-bg bg-info bg-opacity-10">
                                    <i class="fas fa-users text-info fs-4"></i>
                                </div>
                            </div>
                            <small class="text-muted">Active technicians</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Port Activity Section -->
            <div class="row g-4 mb-4">
                <div class="col-xxl-8">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Port Activity Overview</h5>
                            <div class="dropdown">
                                <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                               @*      <li><a class="dropdown-item" href="#">Export CSV</a></li> *@
                                    <li><a class="dropdown-item" href="@Url.Action("PortTickets", "Tickets")">View All Ports</a></li>

                                </ul>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="ps-4">Port</th>
                                            <th class="text-center">Status Distribution</th>
                                            <th class="text-end pe-4">Tech Utilization</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var port in ViewBag.Ports)
                                        {
                                            var totalTickets = port.OpenTickets + port.PendingTickets + port.ClosedTickets + port.EscalatedTickets;

                                            <tr class="border-top">
                                                <td class="ps-4 fw-bold">@port.PortName</td>

                                                <!-- Status Distribution Column -->
                                                <td>
                                                    <div class="d-flex flex-column gap-2">
                                                        <!-- Stacked Progress Bar -->
                                                        <div class="progress" style="height: 8px">
                                                            <div class="progress-bar bg-warning" role="progressbar"
                                                                 style="width: @((port.OpenTickets/(double)totalTickets).ToString("P0"))"
                                                                 title="Open: @port.OpenTickets"></div>
                                                            <div class="progress-bar bg-info" role="progressbar"
                                                                 style="width: @((port.PendingTickets/(double)totalTickets).ToString("P0"))"
                                                                 title="Pending: @port.PendingTickets"></div>
                                                            <div class="progress-bar bg-success" role="progressbar"
                                                                 style="width: @((port.ClosedTickets/(double)totalTickets).ToString("P0"))"
                                                                 title="Closed: @port.ClosedTickets"></div>
                                                            <div class="progress-bar bg-danger" role="progressbar"
                                                                 style="width: @((port.EscalatedTickets/(double)totalTickets).ToString("P0"))"
                                                                 title="Escalated: @port.EscalatedTickets"></div>
                                                        </div>

                                                        <!-- Status Badges -->
                                                        <div class="d-flex gap-3">
                                                            <div class="d-flex align-items-center gap-1">
                                                                <span class="badge bg-warning bg-opacity-10 text-warning">@port.OpenTickets</span>
                                                                <small class="text-muted">Open</small>
                                                            </div>
                                                            <div class="d-flex align-items-center gap-1">
                                                                <span class="badge bg-info bg-opacity-10 text-info">@port.PendingTickets</span>
                                                                <small class="text-muted">Pending</small>
                                                            </div>
                                                            <div class="d-flex align-items-center gap-1">
                                                                <span class="badge bg-success bg-opacity-10 text-success">@port.ClosedTickets</span>
                                                                <small class="text-muted">Closed</small>
                                                            </div>
                                                            <div class="d-flex align-items-center gap-1">
                                                                <span class="badge bg-danger bg-opacity-10 text-danger">@port.EscalatedTickets</span>
                                                                <small class="text-muted">Escalated</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>

                                                <!-- Tech Utilization Column -->
                                                <td class="pe-4">
                                                    <div class="d-flex align-items-center justify-content-end gap-3">
                                                        <div class="text-end">
                                                            <div class="fw-semibold">@port.TechnicianUtilization%</div>
                                                           @*  <small class="text-muted">of capacity</small> *@
                                                        </div>
                                                        <div class="progress rounded-pill" style="width: 100px; height: 12px">
                                                            <div class="progress-bar bg-info rounded-pill"
                                                                 role="progressbar"
                                                                 style="width: @port.TechnicianUtilization%"
                                                                 aria-valuenow="@port.TechnicianUtilization"
                                                                 aria-valuemin="0"
                                                                 aria-valuemax="100">
                                                            </div>
                                                        </div>
                                                    </div>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Technician Allocation -->
                <div class="col-xxl-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">Technician Allocation</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                @foreach (var port in ViewBag.Ports)
                                {
                                    var techs = ((IEnumerable<dynamic>)port.Technicians).ToList();
                                    var topTechs = techs.Take(3).ToList();
                                    var hasMore = techs.Count > 3;

                                    <div class="col-12">
                                        <div class="card card-port border">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-center mb-3">
                                                    <h6 class="mb-0">@port.PortName</h6>
                                                    <span class="badge bg-primary bg-opacity-10 text-primary">
                                                        @port.Technicians.Count techs
                                                    </span>
                                                </div>

                                                <div class="d-flex flex-wrap gap-2">
                                                    @if (topTechs.Any())
                                                    {
                                                        @foreach (var tech in topTechs)
                                                        {
                                                            <div class="d-flex align-items-center bg-light rounded-pill p-2">
                                                                <div class="avatar bg-primary bg-opacity-10 text-primary rounded-circle me-2">
                                                                    @tech.Initials
                                                                </div>
                                                                <div>
                                                                    <div class="fw-small">@tech.Name</div>
                                                                    <small class="text-muted">@tech.TicketsHandled tickets</small>
                                                                </div>
                                                            </div>
                                                        }

                                                        @if (hasMore)
                                                        {
                                                            <div class="d-flex align-items-center">
                                                                <a href="/Port/Technicians/@port.PortId" class="text-muted">+ More</a>
                                                            </div>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <div class="text-muted">No technicians assigned</div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (role == "Technical Support")
    {
        <div class="container-fluid px-4">
            <!-- Dashboard Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-0"><i class="fas fa-headset me-2 text-primary"></i>Dashboard</h2>
                    <p class="text-muted mb-0">Manage ports, technicians, and ticket escalations</p>
                </div>
                <div class="dashboard-summary">
                    <div class="stat-card bg-primary text-white">
                        <i class="fas fa-anchor"></i>
                        <span class="count">@ViewBag.Ports.Count</span>
                        <span class="label">Active Ports</span>
                    </div>
                    <div class="stat-card bg-success text-white">
                        <i class="fas fa-users-cog"></i>
                        <span class="count">@ViewBag.Technicians.Count</span>
                        <span class="label">Technicians</span>
                    </div>
                    <div class="stat-card bg-warning text-dark">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span class="count">@ViewBag.EscalatedTicketsCount</span>
                        <span class="label">Escalations</span>
                    </div>
                </div>
            </div>

            <!-- Management Tabs -->
            <nav class="mb-3">
                <div class="nav nav-tabs" id="nav-tab" role="tablist" style="font-size: 1.05rem;">
                    <!-- Port Management Tab -->
                    <button class="nav-link active d-flex align-items-center py-3 px-4"
                            data-bs-toggle="tab"
                            data-bs-target="#nav-ports"
                            type="button">
                        <i class="fas fa-anchor me-2 fs-5"></i>
                        <span class="fw-medium">Port Management</span>
                    </button>

                    <!-- Technician Management Tab -->
                    <button class="nav-link d-flex align-items-center py-3 px-4"
                            data-bs-toggle="tab"
                            data-bs-target="#nav-technicians"
                            type="button">
                        <i class="fas fa-users-cog me-2 fs-5"></i>
