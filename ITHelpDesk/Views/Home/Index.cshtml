@{
    Layout = "_Layout";
    ViewData["Title"] = "Dashboard";
    string role = ViewBag.Role as string;
}

<div class="container mt-5">
    @if (role == "User")
    {
        <!-- Summary Cards -->
        <div class="row g-3 mb-4">
            <!-- Total Tickets -->
            <div class="col-md-4">
                <div class="card border-start border-primary border-4 shadow-sm h-100">
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <div class="text-center w-100">
                            <h6 class="text-muted mb-1">Total Tickets</h6>
                            <h3 class="fw-bold mb-0">@ViewBag.TotalTickets</h3>
                        </div>
                        <div class="icon-bg bg-primary bg-opacity-10 ms-3">
                            <i class="fas fa-ticket-alt text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pending Tickets -->
            <div class="col-md-4">
                <div class="card border-start border-warning border-4 shadow-sm h-100">
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <div class="text-center w-100">
                            <h6 class="text-muted mb-1">Pending Tickets</h6>
                            <h3 class="fw-bold mb-0">@ViewBag.PendingTickets</h3>
                        </div>
                        <div class="icon-bg bg-warning bg-opacity-10 ms-3">
                            <i class="fas fa-clock text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Closed Tickets -->
            <div class="col-md-4">
                <div class="card border-start border-success border-4 shadow-sm h-100">
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <div class="text-center w-100">
                            <h6 class="text-muted mb-1">Closed Tickets</h6>
                            <h3 class="fw-bold mb-0">@ViewBag.ReceivedTickets</h3>
                        </div>
                        <div class="icon-bg bg-success bg-opacity-10 ms-3">
                            <i class="fas fa-check-circle text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- End of row -->
        <!-- Recent Tickets Table -->
        <div class="card shadow-sm">
            <div class="card-header bg-white border-bottom-0 pb-0">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">Recent Tickets</h5>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr class="table-light">
                                <th>Ticket #</th>
                                <th>Requester</th>
                                <th>Category</th>
                                <th>Priority</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in ViewBag.RecentTickets)
                            {
                                <tr>
                                    <td class="fw-bold">@ticket.TicketNumber</td>
                                    <td>@ticket.RequesterName</td>
                                    <td>
                                        <span class="d-block">@ticket.Category?.CategoryName</span>
                                        <small class="text-muted">@ticket.Subcategory?.SubcategoryName</small>
                                    </td>
                                    <td>
                                        @{
                                            var priorityClass = "";
                                            switch (ticket.Priority?.PriorityName?.ToLower())
                                            {
                                                case "high":
                                                    priorityClass = "text-danger";
                                                    break;
                                                case "medium":
                                                    priorityClass = "text-warning";
                                                    break;
                                                case "low":
                                                    priorityClass = "text-success";
                                                    break;
                                                default:
                                                    priorityClass = "text-info";
                                                    break;
                                            }
                                        }
                                        <span class="@priorityClass">
                                            <i class="fas fa-circle me-1" style="font-size:8px"></i>
                                            @ticket.Priority?.PriorityName
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark">
                                            <i class="fas fa-circle text-warning me-1" style="font-size:8px"></i>
                                            Pending
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (role == "Technician")
    {
        <!-- Summary Cards -->
        <div class="row g-3 mb-4">
            <!-- Technician Activities Card -->
            <div class="col-md-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white border-bottom-0">
                        <h5 class="fw-bold mb-0">Technician Activities</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <!-- Opened Tickets -->
                            <div class="col-md-3 mb-3">
                                <div class="p-3 bg-light bg-opacity-10 rounded">
                                    <h6 class="text-muted mb-1">Opened</h6>
                                    <h3 class="fw-bold mb-0 text-primary">@ViewBag.TechnicianStats?.Opened</h3>
                                </div>
                            </div>

                            <!-- Pending Tickets -->
                            <div class="col-md-3 mb-3">
                                <div class="p-3 bg-light bg-opacity-10 rounded">
                                    <h6 class="text-muted mb-1">Pending</h6>
                                    <h3 class="fw-bold mb-0 text-warning">@ViewBag.TechnicianStats?.Pending</h3>
                                </div>
                            </div>

                            <!-- Closed Tickets -->
                            <div class="col-md-3 mb-3">
                                <div class="p-3 bg-light bg-opacity-10 rounded">
                                    <h6 class="text-muted mb-1">Closed</h6>
                                    <h3 class="fw-bold mb-0 text-success">@ViewBag.TechnicianStats?.Closed</h3>
                                </div>
                            </div>

                            <!-- Escalated Tickets -->
                            <div class="col-md-3 mb-3">
                                <div class="p-3 bg-light bg-opacity-10 rounded">
                                    <h6 class="text-muted mb-1">Escalated</h6>
                                    <h3 class="fw-bold mb-0 text-danger">@ViewBag.TechnicianStats?.Escalated</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Port Monthly Activities Card -->
            <div class="col-md-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white border-bottom-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="fw-bold mb-0">Port Monthly Activities</h5>
                            @if (ViewBag.PortStats?.TotalPorts > 1)
                            {
                                <span class="badge bg-info">Multiple Ports: @ViewBag.PortStats.TotalPorts</span>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.PortStats?.TotalPorts > 1)
                        {
                            <div class="alert alert-info mb-3 py-2">
                                <small>Showing combined statistics for all assigned ports</small>
                            </div>
                        }

                        <div class="row text-center">
                            <!-- Opened Tickets -->
                            <div class="col-md-3 mb-3">
                                <div class="p-3 bg-light bg-opacity-10 rounded">
                                    <h6 class="text-muted mb-1">Opened</h6>
                                    <h3 class="fw-bold mb-0 text-primary">@ViewBag.PortStats?.Opened</h3>
                                </div>
                            </div>

                            <!-- Pending Tickets -->
                            <div class="col-md-3 mb-3">
                                <div class="p-3 bg-light bg-opacity-10 rounded">
                                    <h6 class="text-muted mb-1">Pending</h6>
                                    <h3 class="fw-bold mb-0 text-warning">@ViewBag.PortStats?.Pending</h3>
                                </div>
                            </div>

                            <!-- Closed Tickets -->
                            <div class="col-md-3 mb-3">
                                <div class="p-3 bg-light bg-opacity-10 rounded">
                                    <h6 class="text-muted mb-1">Closed</h6>
                                    <h3 class="fw-bold mb-0 text-success">@ViewBag.PortStats?.Closed</h3>
                                </div>
                            </div>

                            <!-- Escalated Tickets -->
                            <div class="col-md-3 mb-3">
                                <div class="p-3 bg-light bg-opacity-10 rounded">
                                    <h6 class="text-muted mb-1">Escalated</h6>
                                    <h3 class="fw-bold mb-0 text-danger">@ViewBag.PortStats?.Escalated</h3>
                                </div>
                            </div>
                        </div>

                        @if (ViewBag.PortBreakdown != null)
                        {
                            <div class="mt-4">
                                <h6 class="fw-bold mb-3">Details by Port:</h6>
                                <div class="row">
                                    @foreach (var port in ViewBag.PortBreakdown)
                                    {
                                        <div class="col-md-6 mb-3">
                                            <div class="card border-0 shadow-sm">
                                                <div class="card-header bg-light">
                                                    <h6 class="fw-bold mb-0">@port.PortName</h6>
                                                </div>
                                                <div class="card-body">
                                                    <div class="row text-center">
                                                        <div class="col-3">
                                                            <small class="text-muted">Opened</small>
                                                            <div class="fw-bold">@port.Opened</div>
                                                        </div>
                                                        <div class="col-3">
                                                            <small class="text-muted">Pending</small>
                                                            <div class="fw-bold">@port.Pending</div>
                                                        </div>
                                                        <div class="col-3">
                                                            <small class="text-muted">Closed</small>
                                                            <div class="fw-bold">@port.Closed</div>
                                                        </div>
                                                        <div class="col-3">
                                                            <small class="text-muted">Escalated</small>
                                                            <div class="fw-bold">@port.Escalated</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Search and Tickets Table -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white border-bottom-0">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">Your Tickets</h5>
                    <div class="col-md-4">
                        <form method="get" action="@Url.Action("Dashboard", "Home")">
                            <div class="input-group">
                                <input type="text" class="form-control" name="search" placeholder="Search tickets..." value="@Context.Request.Query["search"]">
                                <button class="btn btn-outline-secondary" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr class="table-light">
                                <th>Ticket #</th>
                                <th>Requester</th>
                                <th>Email</th>
                                <th>Site</th>
                                <th>Category</th>
                                <th>Subcategory</th>
                                <th>Priority</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in ViewBag.TechnicianTickets)
                            {
                                <tr>
                                    <td class="fw-bold">@ticket.TicketNumber</td>
                                    <td>@ticket.RequesterName</td>
                                    <td>@ticket.RequesterEmail</td>
                                    <td>@ticket.Site</td>
                                    <td>@ticket.Category</td>
                                    <td>@ticket.Subcategory</td>
                                    <td>
                                        @{
                                            var priorityClass = "";
                                            switch (ticket.Priority?.ToLower())
                                            {
                                                case "high":
                                                    priorityClass = "bg-danger bg-opacity-10 text-danger";
                                                    break;
                                                case "medium":
                                                    priorityClass = "bg-warning bg-opacity-10 text-warning";
                                                    break;
                                                case "low":
                                                    priorityClass = "bg-success bg-opacity-10 text-success";
                                                    break;
                                                default:
                                                    priorityClass = "bg-info bg-opacity-10 text-info";
                                                    break;
                                            }
                                        }
                                        <span class="badge @priorityClass">@ticket.Priority</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }


    else if (role == "Technical Support")
    {
        <div class="alert alert-info">Technical Support Dashboard</div>
        <p>You can manage all ports and dropdown tables here. Features like:</p>
        <ul>
            <li>Create Ports</li>
            <li>Manage Categories</li>
            <li>Assign Technicians</li>
        </ul>
    }
    else
    {
        <div class="alert alert-danger">No role assigned. Please contact the administrator.</div>
    }
</div>


<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style>
    .icon-bg {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .card {
        border-radius: 10px;
        border: 1px solid #e9ecef;
    }

    .table th {
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #6c757d;
    }

    .table td {
        vertical-align: middle;
    }

    .card-body {
        min-height: 120px; /* optional fixed height */
    }

   
</style>