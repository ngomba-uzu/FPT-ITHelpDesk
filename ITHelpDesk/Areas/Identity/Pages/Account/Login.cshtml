@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FPT IT HelpDesk</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            overflow: hidden;
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                width: 300px;
                height: 300px;
                background: rgba(0, 123, 255, 0.1);
                border-radius: 50%;
                top: -100px;
                left: -100px;
                z-index: -1;
                filter: blur(60px);
            }

            body::after {
                content: "";
                position: absolute;
                width: 400px;
                height: 400px;
                background: rgba(40, 167, 69, 0.1);
                border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
                bottom: -150px;
                right: -100px;
                z-index: -1;
                filter: blur(60px);
            }

        .login-container {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            padding: 40px;
            width: 100%;
            max-width: 450px;
            position: relative;
            z-index: 1;
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .login-header h1 {
                color: #333;
                font-size: 24px;
                margin-bottom: 10px;
                font-weight: 600;
            }

        .form-control {
            height: 45px;
            border-radius: 6px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            padding-left: 15px;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.1);
            }

        .btn-login {
            background-color: #007bff;
            color: white;
            height: 45px;
            border-radius: 6px;
            font-weight: 500;
            width: 100%;
            margin-top: 10px;
            transition: all 0.3s;
            border: none;
        }

            .btn-login:hover {
                background-color: #0069d9;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
            }

        .login-footer {
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid #eee;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 15px;
        }

            .login-footer a {
                color: #666;
                text-decoration: none;
                font-size: 13px;
                transition: all 0.2s;
                display: inline-flex;
                align-items: center;
            }

                .login-footer a:hover {
                    color: #007bff;
                    transform: translateY(-1px);
                }

                .login-footer a i {
                    margin-right: 5px;
                    font-size: 12px;
                }

        .remember-me {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .remember-me input {
                margin-right: 8px;
            }

        .input-group-text {
            cursor: pointer;
            background-color: #f8f9fa;
        }

        .brand-logo {
            text-align: center;
            margin-bottom: 20px;
        }

            .brand-logo img {
                height: 40px;
            }
    </style>
</head>
<body>
    <div class="login-container">
         <div class="brand-logo">
            <img src="~/FPT-Icon.png" alt="FPT Logo">
        </div> 

        <div class="login-header">
            <h1>FPT - IT HelpDesk</h1>
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <input asp-for="Input.Password" id="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                    <button class="btn btn-outline-secondary" type="button" onclick="passwordVisible()">
                        <i id="passwordToggle" class="fas fa-eye-slash"></i>
                    </button>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="remember-me">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        Remember me
                    </label>
                </div>
            </div>

            <button id="login-submit" type="submit" class="btn btn-login">Login</button>

            <div class="login-footer">
                <a id="forgot-password" asp-page="./ForgotPassword"><i class="fas fa-key"></i> Forgot password?</a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><i class="fas fa-user-plus"></i> Register</a>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation"><i class="fas fa-envelope"></i> Resend confirmation</a>
            </div>
        </form>
    </div>
    <script>
        function passwordVisible() {
            var x = document.getElementById("password");
            var passwordToggle = document.getElementById("passwordToggle");
            if (x.type === "password") {
                x.type = "text";
                passwordToggle.className = "fas fa-eye";
            } else {
                x.type = "password";
                passwordToggle.className = "fas fa-eye-slash";
            }
        }
    </script>
    @if (TempData["Message"] != null)
    {
        <script>
            Swal.fire({
                title: 'Account Created',
                text: '@TempData["Message"]',
                icon: 'success',
                confirmButtonText: 'Okay'
            });
        </script>
    }

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>