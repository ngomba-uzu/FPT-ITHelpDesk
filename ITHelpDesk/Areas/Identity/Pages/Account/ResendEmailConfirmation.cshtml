@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FPT IT Helpdesk</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            overflow: hidden;
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                width: 300px;
                height: 300px;
                background: rgba(0, 123, 255, 0.1);
                border-radius: 50%;
                top: -100px;
                left: -100px;
                z-index: -1;
                filter: blur(60px);
            }

            body::after {
                content: "";
                position: absolute;
                width: 400px;
                height: 400px;
                background: rgba(40, 167, 69, 0.1);
                border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
                bottom: -150px;
                right: -100px;
                z-index: -1;
                filter: blur(60px);
            }

        .confirmation-container {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            padding: 40px;
            width: 100%;
            max-width: 450px;
            position: relative;
            z-index: 1;
        }

        .confirmation-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .confirmation-header h1 {
                color: #333;
                font-size: 24px;
                margin-bottom: 10px;
                font-weight: 600;
            }

            .confirmation-header p {
                color: #666;
                font-size: 16px;
            }

        .form-control {
            height: 45px;
            border-radius: 6px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
        }

        .btn-resend {
            background-color: #007bff;
            color: white;
            height: 45px;
            border-radius: 6px;
            font-weight: 500;
            width: 100%;
            transition: all 0.3s;
            border: none;
        }

            .btn-resend:hover {
                background-color: #0069d9;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
            }

        .brand-logo {
            text-align: center;
            margin-bottom: 20px;
        }

            .brand-logo img {
                height: 50px;
            }

        .back-to-login {
            text-align: center;
            margin-top: 20px;
        }

            .back-to-login a {
                color: #007bff;
                text-decoration: none;
            }

                .back-to-login a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <div class="brand-logo">
            <img src="~/FPT-Icon.png" alt="FPT Logo">
        </div>

        <div class="confirmation-header">
            <h1>Resend Email Confirmation</h1>
            <p>Enter your email to receive a new confirmation link</p>
        </div>

        <form method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="Email address" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-resend">Resend Confirmation</button>
        </form>

        <div class="back-to-login">
            <a asp-page="./Login"><i class="fas fa-arrow-left"></i> Back to Login</a>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
