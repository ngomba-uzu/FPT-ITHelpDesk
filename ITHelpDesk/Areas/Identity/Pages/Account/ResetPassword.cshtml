@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FPT IT Helpdesk</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            overflow: hidden;
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                width: 300px;
                height: 300px;
                background: rgba(0, 123, 255, 0.1);
                border-radius: 50%;
                top: -100px;
                left: -100px;
                z-index: -1;
                filter: blur(60px);
            }

            body::after {
                content: "";
                position: absolute;
                width: 400px;
                height: 400px;
                background: rgba(40, 167, 69, 0.1);
                border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
                bottom: -150px;
                right: -100px;
                z-index: -1;
                filter: blur(60px);
            }

        .reset-container {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            padding: 40px;
            width: 100%;
            max-width: 450px;
            position: relative;
            z-index: 1;
        }

        .reset-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .reset-header h1 {
                color: #333;
                font-size: 24px;
                margin-bottom: 10px;
                font-weight: 600;
            }

            .reset-header p {
                color: #666;
                font-size: 16px;
            }

        .form-control {
            height: 45px;
            border-radius: 6px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.1);
            }

        .btn-reset {
            background-color: #007bff;
            color: white;
            height: 45px;
            border-radius: 6px;
            font-weight: 500;
            width: 100%;
            transition: all 0.3s;
            border: none;
        }

            .btn-reset:hover {
                background-color: #0069d9;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
            }

        .brand-logo {
            text-align: center;
            margin-bottom: 20px;
        }

            .brand-logo img {
                height: 50px;
            }

        .input-group {
            margin-bottom: 20px;
        }

        .password-toggle {
            cursor: pointer;
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            border-left: none;
            display: flex;
            align-items: center;
            padding: 0 15px;
            border-top-right-radius: 6px;
            border-bottom-right-radius: 6px;
        }

        .back-to-login {
            text-align: center;
            margin-top: 20px;
        }

            .back-to-login a {
                color: #007bff;
                text-decoration: none;
            }

                .back-to-login a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="reset-container">
        <div class="brand-logo">
            <img src="~/FPT-Icon.png" alt="FPT Logo">
        </div>

        <div class="reset-header">
            <h1>Reset Your Password</h1>
            <p>Create a new password for your account</p>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />

            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email address" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <input asp-for="Input.Password" id="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="New password" />
                    <span class="password-toggle" onclick="togglePassword('password', 'passwordToggle')">
                        <i id="passwordToggle" class="fas fa-eye-slash"></i>
                    </span>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <input asp-for="Input.ConfirmPassword" id="confirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm new password" />
                    <span class="password-toggle" onclick="togglePassword('confirmPassword', 'confirmPasswordToggle')">
                        <i id="confirmPasswordToggle" class="fas fa-eye-slash"></i>
                    </span>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-reset">Reset Password</button>
        </form>

        <div class="back-to-login">
            <a asp-page="./Login"><i class="fas fa-arrow-left"></i> Back to Login</a>
        </div>
    </div>

    @section Scripts {
        <script>
            function togglePassword(fieldId, toggleId) {
                var field = document.getElementById(fieldId);
                var toggle = document.getElementById(toggleId);
                if (field.type === "password") {
                    field.type = "text";
                    toggle.className = "fas fa-eye";
                } else {
                    field.type = "password";
                    toggle.className = "fas fa-eye-slash";
                }
            }
        </script>
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>